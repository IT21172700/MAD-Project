<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestView">

    <TextView
        android:id="@+id/reqNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/reqOrgNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oraganization Name"
        android:textSize="18sp"
        android:layout_below="@+id/reqNameTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>



    <TextView
        android:id="@+id/reqAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="18sp"
        android:layout_below="@+id/reqOrgNameTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/reqNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="18sp"
        android:layout_below="@+id/reqAddressTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/reqDescrTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Wants"
        android:textSize="18sp"
        android:layout_below="@+id/reqNumberTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
